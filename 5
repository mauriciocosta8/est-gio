#include <stdio.h>
#include <string.h>

void inverterString(char* str) {
    int n = strlen(str);
    int i, j;
    char temp;

    for (i = 0, j = n - 1; i < j; i++, j--) {
      
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
}

int main() {
    char str[100];

    printf("Informe uma string: ");
    fgets(str, sizeof(str), stdin);

    str[strcspn(str, "\n")] = '\0';

    inverterString(str);

    printf("String invertida: %s\n", str);

    return 0;
}
