#include <stdio.h>
#include <windows.h>


int pertenceFibonacci(int num) {
    int a = 0, b = 1, c;

    if (num == a || num == b) {
        return 1;  
    }

    while (1) {
        c = a + b;
        if (c == num) {
            return 1;  
        } else if (c > num) {
            return 0; 
        }
        a = b;
        b = c;
    }
}

int main() {
    int num;

    printf("Informe um numero: ");
    scanf("%d", &num);

    if (pertenceFibonacci(num)) {
        printf("O numero %d pertence a sequencia de Fibonacci.\n", num);
    } else {
        printf("O numero %d nao pertence a sequÃªncia de Fibonacci.\n", num);
    }

    return 0;
}
